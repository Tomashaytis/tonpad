<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox fx:id="titleBarMainHBox" prefHeight="40.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.tonpad.ui.controllers.TitleBarController">
   <children>
      <HBox fx:id="leftHeadHBox" prefHeight="100.0" prefWidth="200.0">
         <children>
            <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" styleClass="tonpad48-icon" />
         </children>
      </HBox>
      <HBox fx:id="centerHeadHBox" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
      <HBox fx:id="rightHeadHBox" alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="collapseAppButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" styleClass="app-button" textAlignment="CENTER">
               <tooltip>
                  <Tooltip text="Show files tree">
                     <styleClass>
                        <String fx:value="custom-tooltip" />
                        <String fx:value="tooltip-right" />
                     </styleClass>
                  </Tooltip>
               </tooltip>
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" styleClass="collapse-app-icon" />
               </graphic>
            </Button>
            <Button fx:id="resizeAppButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" styleClass="app-button" textAlignment="CENTER">
               <tooltip>
                  <Tooltip text="Show files tree">
                     <styleClass>
                        <String fx:value="custom-tooltip" />
                        <String fx:value="tooltip-right" />
                     </styleClass>
                  </Tooltip>
               </tooltip>
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" styleClass="resize-app-icon" />
               </graphic>
            </Button>
            <Button fx:id="closeAppButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" styleClass="close-button" textAlignment="CENTER">
               <tooltip>
                  <Tooltip text="Show files tree">
                     <styleClass>
                        <String fx:value="custom-tooltip" />
                        <String fx:value="tooltip-right" />
                     </styleClass>
                  </Tooltip>
               </tooltip>
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" styleClass="close-app-icon" />
               </graphic>
            </Button>
         </children>
      </HBox>
   </children>
</HBox>
