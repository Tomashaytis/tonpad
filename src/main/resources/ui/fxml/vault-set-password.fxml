<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<HBox fx:id="vaultSetPasswordRoot"
      xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.tonpad.ui.controllers.security.VaultSetPasswordController"
      spacing="0">
    <children>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16"/>
            </padding>

            <columnConstraints>
                <ColumnConstraints minWidth="120"/>
                <ColumnConstraints minWidth="240" prefWidth="280"/>
            </columnConstraints>

            <children>
                <Label text="password:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <PasswordField fx:id="passwordField"
                               promptText="Enter password (optional)"
                               GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <HBox spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="1">
                    <children>
                        <Button fx:id="setPasswordButton" text="Create encrypted" defaultButton="true"/>
                        <Button fx:id="continueWithoutButton" text="Create not encrypted" />
                        <!--Button fx:id="cancelButton" text="Cancel" cancelButton="true"/-->
                    </children>
                </HBox>
            </children>
        </GridPane>
    </children>
</HBox>
