<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainVBox" prefHeight="600.0" prefWidth="900.0" styleClass="main-body" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.tonpad.ui.controllers.MainController">
   <children>
      <HBox fx:id="mainHBox" prefHeight="600.0" prefWidth="900.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox prefWidth="40.0">
               <children>
                  <VBox fx:id="leftToolsPane" maxHeight="1.7976931348623157E308" prefWidth="40.0" spacing="5.0" styleClass="side-panel" VBox.vgrow="ALWAYS">
                     <children>
                        <Button fx:id="showFilesButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="24.0" prefWidth="24.0" styleClass="icon-button" text="F" textAlignment="CENTER">
                           <tooltip>
                              <Tooltip text="Show files tree">
                                 <styleClass>
                                    <String fx:value="custom-tooltip" />
                                    <String fx:value="tooltip-right" />
                                 </styleClass>
                              </Tooltip>
                           </tooltip>
                           <padding>
                              <Insets right="3.0" />
                           </padding>
                           <graphic>
                              <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" styleClass="folder-icon" />
                           </graphic>
                        </Button>
                        <Button fx:id="showSearchButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="24.0" prefWidth="24.0" styleClass="icon-button" text="S" textAlignment="CENTER">
                           <padding>
                              <Insets right="3.0" />
                           </padding>
                           <tooltip>
                              <Tooltip text="Show search panel">
                                 <styleClass>
                                    <String fx:value="custom-tooltip" />
                                    <String fx:value="tooltip-right" />
                                 </styleClass>
                              </Tooltip>
                           </tooltip>
                           <graphic>
                              <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" styleClass="folder-search-icon" />
                           </graphic>
                        </Button>
                        <Button fx:id="showBookmarksButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="24.0" prefWidth="24.0" styleClass="icon-button" text="T" textAlignment="CENTER">
                           <padding>
                              <Insets right="3.0" />
                           </padding>
                           <tooltip>
                              <Tooltip text="Show bookmarks panel">
                                 <styleClass>
                                    <String fx:value="custom-tooltip" />
                                    <String fx:value="tooltip-right" />
                                 </styleClass>
                              </Tooltip>
                           </tooltip>
                           <graphic>
                              <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" styleClass="bookmarks-icon" />
                           </graphic>
                        </Button>
                     </children>
                     <padding>
                        <Insets top="5.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
            <StackPane fx:id="leftStackPane" prefHeight="150.0" prefWidth="200.0">
               <children>
                  <AnchorPane fx:id="fileTreePane" minWidth="180.0" styleClass="file-tree-panel" visible="false" />
                  <AnchorPane fx:id="searchInFileTreePane" pickOnBounds="false" styleClass="viewing-panel" visible="false"/>
                  <AnchorPane fx:id="searchInFilesPane" minWidth="180.0" styleClass="viewing-panel" visible="false" />
                  <AnchorPane fx:id="bookmarksPane" minWidth="180.0" styleClass="viewing-panel" visible="false" />
               </children>
            </StackPane>

            <StackPane fx:id="noteStackPane" prefHeight="150.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
               <children>
                  <TabPane fx:id="tabPane" prefHeight="598.0" prefWidth="823.0" tabClosingPolicy="ALL_TABS" />
                  <AnchorPane fx:id="searchInTextPane" pickOnBounds="false" styleClass="viewing-panel" visible="false"/>
                  <AnchorPane fx:id="settingsPane" pickOnBounds="false" />
               </children>
            </StackPane>
            <VBox prefWidth="40.0">
               <children>
                  <VBox fx:id="rightToolsPane" spacing="5.0" styleClass="side-panel" VBox.vgrow="ALWAYS">
                     <children>
                        <Button fx:id="showSettingsButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="24.0" prefWidth="24.0" styleClass="icon-button" text="S" textAlignment="CENTER">
                           <tooltip>
                              <Tooltip anchorLocation="CONTENT_TOP_RIGHT" text="Open settings">
                                 <styleClass>
                                    <String fx:value="custom-tooltip" />
                                    <String fx:value="tooltip-left" />
                                 </styleClass>
                              </Tooltip>
                           </tooltip>
                           <graphic>
                              <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" styleClass="more-options-icon" />
                           </graphic>
                           <padding>
                              <Insets right="3.0" />
                           </padding>
                        </Button>
                        <Button fx:id="enableReadingViewButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="24.0" prefWidth="24.0" styleClass="icon-button" text="R" textAlignment="CENTER">
                           <padding>
                              <Insets right="3.0" />
                           </padding>
                           <tooltip>
                              <Tooltip anchorLocation="CONTENT_TOP_RIGHT" text="Enable reading view">
                                 <styleClass>
                                    <String fx:value="custom-tooltip" />
                                    <String fx:value="tooltip-left" />
                                 </styleClass>
                              </Tooltip>
                           </tooltip>
                           <graphic>
                              <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" styleClass="reading-view-icon" />
                           </graphic>
                        </Button>
                        <Button fx:id="enablePlainViewButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="24.0" prefWidth="24.0" styleClass="icon-button" text="P" textAlignment="CENTER">
                           <padding>
                              <Insets right="3.0" />
                           </padding>
                           <tooltip>
                              <Tooltip anchorLocation="CONTENT_TOP_RIGHT" text="Show plain text">
                                 <styleClass>
                                    <String fx:value="custom-tooltip" />
                                    <String fx:value="tooltip-left" />
                                 </styleClass>
                              </Tooltip>
                           </tooltip>
                           <graphic>
                              <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" styleClass="plain-view-icon" />
                           </graphic>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Button>
                     </children>
                     <padding>
                        <Insets top="5.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
